<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RichCRUDelicious</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RichCRUDelicious.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="container text-center mt-5">
            <h1>@ViewData["Header"]</h1>
            <span class="d-flex text-center p-2 gap-3 justify-content-center">
                @if ((bool)ViewData["Home"])
                {
                    @Html.ActionLink("Home", "Index", "Home")
                }
                else
                {
                    <p>Home</p>
                }
                <p>|</p>
                @if ((bool)ViewData["Add"])
                {
                    @Html.ActionLink("Add", "NewDish", "Home", "Get")
                }
                else
                {
                    <p>Add</p>
                }
            </span>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
