@{
    ViewData["Title"] = "Add a dish!";
    ViewData["Header"] = "Add a new Dish!";
    ViewData["Home"] = true;
    ViewData["Add"] = false;
    var parms = new Dictionary<string, string>
{
{"operation", @ViewBag.Button}
};
}
@model RichCRUDelicious.Models.Dish

<div class="container d-flex justify-content-center p-2">
    <form asp-action="Dish" asp-controller="Home" method="post" asp-all-route-data="parms"
        class="container d-flex justify-content-evenly">
        @Html.HiddenFor(m => m.DishId, new {Value = @Model.DishId})
        <div class="d-flex flex-column gap-2">
            <label asp-for="Chef"></label>
            <input asp-for="Chef">
            <span asp-validation-for="Chef"></span>

            <label asp-for="Name"></label>
            <input asp-for="Name">
            <span asp-validation-for="Name"></span>

            <label asp-for="Calories"></label>
            <input asp-for="Calories">
            <span asp-validation-for="Calories"></span>
        </div>
        <div class="d-flex flex-column gap-2">
            <label asp-for="Tastiness"></label>
            <select asp-for="Tastiness">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
        <div class="d-flex flex-column gap-2">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" cols="30" rows="5"></textarea>
            <span asp-validation-for="Description"></span>

            <button type="submit">@ViewBag.Button</button>
        </div>
    </form>
</div>